@model IEnumerable<BabaRh.Web.Models.ViewModel.ModuleVM>

@Html.Partial("~/Views/Shared/_LayoutQuestionsManager.cshtml")

@{
    ViewBag.Title = "Index";
}

<div class="marginAfterLeftNavBar">
    <h2>Liste des modules</h2>

    <p>
        @Html.ActionLink("Ajouter nouveau module", "Create", "Modules", new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ModuleLib)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ModuleLib)
                </td>
                <td>
                    @Html.ActionLink("Editer", "Edit", new { id = item.ModuleId }, new { @class = "btn btn-primary" })                   
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.ModuleId }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }

    </table>
</div>
<style>
    .marginAfterLeftNavBar {
        margin-left: 180px;
    }
    table {
        margin-left: 20px;
        margin-top: 50px;
    }
</style>