        margin-top: 11px;
        text-align: center;
        justify-content: center;
        width: 43%;
    }

    .MiseEnEvidence {
        color: #318CE7;
        font-weight: bold;
    }

    .TextSizeRedefine {
        font-size: 15px;
    }
