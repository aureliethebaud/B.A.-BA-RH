@model IEnumerable<BabaRh.Web.Models.ViewModel.NiveauVM>

@Html.Partial("~/Views/Shared/_LayoutQuestionsManager.cshtml")

@{
    ViewBag.Title = "Index";
}

<div class="marginAfterLeftNavBar">
    <h2>Liste des niveaux</h2>

    <p>
        @Html.ActionLink("Ajouter nouveau niveau", "Create", "Niveaux", new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.NiveauLib)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.NiveauLib)
                </td>
                <td>
                    @Html.ActionLink("Editer", "Edit", new { id = item.NiveauId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.NiveauId }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }

    </table>
</div>
<style>
    .marginAfterLeftNavBar {
        margin-left: 180px;
    }
    table {
        margin-left: 20px;
        margin-top: 50px;
    }
</style>